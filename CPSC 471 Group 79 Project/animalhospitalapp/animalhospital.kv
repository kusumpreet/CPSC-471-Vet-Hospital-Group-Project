<Home>:
    BoxLayout:
        orientation: "vertical"
        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                size: self.width, self.height
        GridLayout:
            cols: 3
            size_hint: 1, None
            height: "50dp"
            padding: "10dp"
            Button:
                id: menuButton
                text: "Menu"
                size_hint: None, 1
                width: "50dp"
                pos_hint: { "center_x": .5 }
                on_press: root.goToMenu()
            Label:
                text: "Animal Hospital App"
                font_size: 17
                color: (0, 0, 0, 1)
                size_hint: 0.2, 1
                pos_hint: { "center_x": .5 }
            Button:
                text: "Profile"
                size_hint: None, 1
                width: "50dp"
                pos_hint: { "center_y": .5 }
                on_press: root.goToProfile()
        GridLayout:
            cols: 1
            size_hint: 1, None
            height: "175dp"
            Label:
                text: "Appointment Types:"
                color: (0, 0, 0, 1)
                size_hint: 1, None
                height: "40dp"
            ScrollView:
                do_scroll_y: False
                bar_width: 7
                GridLayout:
                    rows: 1
                    id: appTypeDisplay
                    padding: "20dp"
                    spacing: "20dp"
                    size_hint_x: None
                    width: self.minimum_width
        GridLayout:
            cols: 1
            Label:
                text: "Our Vets:"
                color: (0, 0, 0, 1)
                size_hint: 1, None
                height: "50dp"
            ScrollView:
                bar_width: 7
                GridLayout:
                    cols: 1
                    id: vetDisplay
                    padding: "20dp"
                    spacing: "20dp"
                    size_hint_y: None
                    height: self.minimum_height

<AppTypeLabel>:
    size_hint: None, None
    size: "100dp", "100dp"
    color: 0,0,0,1
    background_color: (0.5, 0.1, 0.9, 1)
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<Menu>:
    BoxLayout:
        orientation: "vertical"
        padding: "10dp"
        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                size: self.width, self.height
        GridLayout:
            cols: 3
            size_hint: 1, .2
            Button:
                id: goToH
                text: "Go Home"
                size_hint: 0.4, 1
                on_press: root.goHome()
            Label:
                text: ""
            Button:
                id: logO
                text: "Log Out"
                size_hint: 0.4, 1
                pos_hint_x: root.width
                on_press: root.logOut() 
        GridLayout:
            cols: 1
            #padding: "10dp"
            padding: 0, "10dp", 0, 0
            spacing: "10dp"
            Button:
                id: goToC
                text: "Client Login"
                on_press: root.goToCLog()
            Button:
                id: goToV
                text: "Vet Login"
                on_press: root.goToVLog()
            Button:
                id: goToA
                text: "Admin Login"
                on_press: root.goToALog()
            Button:
                id: goToShop
                text: "Shop"
                on_press: root.goToShopPage()
            Button:
                id: goToBlog
                text: "Blog"
                on_press: root.goToBlogPage()

